<UserControl x:Class="TGT.Views.TargetPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TGT.ViewModels"
             xmlns:views="clr-namespace:TGT.Views">

    <!-- 전체 배경 -->
    <Grid Background="#0A1B2A" Margin="4">
        <!-- 내부 Border (Padding은 여기서 사용 가능) -->
        <Border Background="#0A1B2A" CornerRadius="8" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <!-- 카드 리스트 -->
                    <RowDefinition Height="Auto" />
                    <!-- 표적 생성부 -->
                </Grid.RowDefinitions>

                <!-- 표적 카드 리스트 -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Targets}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <views:TargetCard />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- 표적 생성 패널 (항상 하단 표시) -->
                <views:TargetCreationPanel Grid.Row="1" Margin="0,10,0,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
