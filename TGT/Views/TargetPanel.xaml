<UserControl x:Class="TGT.Views.TargetPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TGT.ViewModels"
             xmlns:views="clr-namespace:TGT.Views">

    <!-- 여기서는 DataContext 설정 X (code-behind에서 함) -->

    <Grid Background="#0A1B2A" Margin="4">
        <Border Background="#0A1B2A" CornerRadius="8" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 일괄발사 버튼 -->
                    <RowDefinition Height="*"/>
                    <!-- 표적 카드 리스트 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 표적 생성부 -->
                </Grid.RowDefinitions>

                <!-- 상단 일괄발사 버튼 -->
                <Button Content="모든 표적 발사"
                        Grid.Row="0"
                        Command="{Binding StartAllCommand}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="150"
                        Height="32"
                        Margin="0,0,0,8"
                        Background="#009E4F"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <!-- 표적 카드 리스트 -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="0,4,0,4">
                    <ItemsControl ItemsSource="{Binding Targets}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <views:TargetCard />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                        <!-- 표적이 없을 때 표시되는 메시지 -->
                        <ItemsControl.Style>
                            <Style TargetType="ItemsControl">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Targets.Count}" Value="0">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <TextBlock Text="등록된 표적이 없습니다."
                                                               Foreground="Gray"
                                                               FontStyle="Italic"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Margin="0,20,0,0"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ItemsControl.Style>
                    </ItemsControl>
                </ScrollViewer>

                <!-- 표적 생성 패널 -->
                <views:TargetCreationPanel Grid.Row="2" Margin="0,10,0,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
