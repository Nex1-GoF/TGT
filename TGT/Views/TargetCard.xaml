<UserControl x:Class="TGT.Views.TargetCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:TGT.Views">

    <UserControl.Resources>
        <local:TargetFocusedToBackgroundConverter x:Key="TargetFocusedToBackgroundConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
    </UserControl.Resources>    
    
        <Border CornerRadius="8"
             Background="{StaticResource TargetCardBrush}"
             MouseLeftButtonDown="Card_MouseLeftButtonDown">
        <!-- 클릭 이벤트 -->
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                <i:InvokeCommandAction 
                    Command="{Binding DataContext.SelectTargetCommand,
                                      RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                    CommandParameter="{Binding}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <!-- 선택 강조 -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- 상태 + ID -->
            <Border Padding="6"
            BorderBrush="{StaticResource TargetCardStrokeBrush}"
            CornerRadius="6,6,0,0"
            BorderThickness="4,4,4,2">

                <Border.Background>
                    <MultiBinding Converter="{StaticResource TargetFocusedToBackgroundConverter}">
                        <Binding />
                        <!-- current Target -->
                        <Binding Path="DataContext.SelectedTarget"
                            RelativeSource="{RelativeSource AncestorType=ItemsControl}" />
                    </MultiBinding>
                </Border.Background>

                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                        <TextBlock Text="{Binding Id, StringFormat='TGT-00{0}'}" 
                           Style="{StaticResource MissilePanelHeaderTextStyle}"
                           VerticalAlignment="Bottom"
                           Grid.Column="0"/>
                        <TextBlock Text="Detected"
                               Style="{StaticResource TargetCardDetectedIDTextStyle}"
                               VerticalAlignment="Bottom"
                               Margin="8,0,0,4"
                               Visibility="{Binding IsDetected, Converter={StaticResource BoolToVisibilityConverter}}"
                               Grid.Column="0"/>
                    </StackPanel>
                    
                    <Border Grid.Column="1"/>
                    <TextBlock Text="{Binding TargetInfoName}" Grid.Column="2"
                           Style="{StaticResource TargetCardFlightIdTextStyle}"
                           VerticalAlignment="Bottom"/>
                </Grid>


            </Border>
            <Border 
                Background="{StaticResource TargetCardBrush}"
                BorderBrush="{StaticResource TargetCardStrokeBrush}"
                CornerRadius="0,0,6,6"
                BorderThickness="4,2,4,4"
                Padding="8"
                Grid.Row="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Orientation="Vertical" Grid.Row="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border 
                                        Background="{StaticResource TargetCardContentBlockBrush}"
                                        CornerRadius="4"
                                        Padding="2,4"
                                        Margin="0,0,4,2"
                                        Grid.Column="0">
                                        <TextBlock 
                                    Text="위도"
                                    Style="{StaticResource TargetContentTextStyle}"/>
                                    </Border>
                                    <Border 
                                    Background="{StaticResource TargetCardContentBlockBrush}"
                                    CornerRadius="4"
                                    Padding="2,4"
                                    Margin="2,0,4,2"
                                    Grid.Column="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                            Text="{Binding CurLatDisplay}"
                                            Style="{StaticResource TargetContentTextStyle}"
                                            Grid.Column="0"
                                            />
                                            <TextBlock
                                            Text="(°)"
                                            Style="{StaticResource TargetContentTextStyle}"
                                            Grid.Column="1"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border 
                                Background="{StaticResource TargetCardContentBlockBrush}"
                                CornerRadius="4"
                                Padding="2,4"
                                Margin="0,0,4,2"
                                Grid.Column="0">
                                        <TextBlock 
                                    Text="경도"
                                    Style="{StaticResource TargetContentTextStyle}"/>
                                    </Border>
                                    <Border 
                                Background="{StaticResource TargetCardContentBlockBrush}"
                                CornerRadius="4"
                                Padding="2,4"
                                Margin="0,0,4,2"
                                Grid.Column="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                            Text="{Binding CurLonDisplay}"
                                            Style="{StaticResource TargetContentTextStyle}"
                                            Grid.Column="0"
                                            />

                                            <TextBlock
                                    Text="(°)"
                                    Style="{StaticResource TargetContentTextStyle}"
                                    Grid.Column="1"/>
                                        </Grid>
                                    </Border>
                                </Grid>

                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width =" *"/>
                                    <ColumnDefinition Width =" *"/>
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border
                                        Background="{StaticResource TargetCardContentBlockBrush}"
                                        CornerRadius="4"
                                        Padding="2,4"
                                        Margin="0,2,4,2"
                                        Grid.Column="0">    
                                        <TextBlock 
                                            Text="고도"
                                            Style="{StaticResource TargetContentTextStyle}"/>
                                    </Border>
                                    <Border 
                                        Background="{StaticResource TargetCardContentBlockBrush}"
                                        CornerRadius="4"
                                        Padding="2,4"
                                        Margin="2,2,4,2"
                                        Grid.Column="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                            Text="{Binding Altitude}"
                                            Style="{StaticResource TargetContentTextStyle}"
                                            Grid.Column="0"/>

                                            <TextBlock
                                            Text="(m)"
                                            Style="{StaticResource TargetContentTextStyle}"
                                            Grid.Column="1"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border 
                                        Background="{StaticResource TargetCardContentBlockBrush}"
                                        CornerRadius="4"
                                        Padding="2,4"
                                        Margin="0,2,4,2"
                                        Grid.Column="0">
                                        <TextBlock 
                                    Text="속도"
                                    Style="{StaticResource TargetContentTextStyle}"/>
                                    </Border>
                                    <Border 
                                    Background="{StaticResource TargetCardContentBlockBrush}"
                                    CornerRadius="4"
                                    Padding="2,4"
                                    Margin="0,2,4,2"
                                    Grid.Column="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                            Text="{Binding Speed}"
                                            Style="{StaticResource TargetContentTextStyle}"
                                            Grid.Column="0"/>

                                            <TextBlock
                                            Text="(m/s)"
                                            Style="{StaticResource TargetContentTextStyle}"
                                            Grid.Column="1">
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </Grid>
                                
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border 
                                    Background="{StaticResource TargetCardContentBlockBrush}"
                                    CornerRadius="4"
                                    Padding="2,4"
                                    Margin="0,2,4,2"
                                    Grid.Column="0">
                                    <TextBlock 
                                        Text="헤딩"
                                        Style="{StaticResource TargetContentTextStyle}"/>
                                </Border>
                                <Border 
                                    Background="{StaticResource TargetCardContentBlockBrush}"
                                    CornerRadius="4"
                                    Padding="2,4"
                                    Margin="2,2,4,2"
                                    Grid.Column="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                        Text="{Binding CurYawDisplay}"
                                        Style="{StaticResource TargetContentTextStyle}"
                                        Grid.Column="0"/>

                                        <TextBlock
                                        Text="(°)"
                                        Style="{StaticResource TargetContentTextStyle}"
                                        Grid.Column="1">
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </Grid>
                            </Grid>
                        </StackPanel>
                        <Image Grid.Column="1"
                           x:Name="TargetImage"
                           Source= "/Resources/target2.png"
                           Stretch="Uniform"
                           Height="90"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Top"
                           Margin="8,0,0,0"/>
                        
                    </Grid>

                    <Grid Grid.Row="1" Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,0">

                            <!-- 삭제 버튼 -->
                            <Button Content="삭제"
                                Style="{StaticResource DefaultButtonStyle}"
                                Command="{Binding DataContext.RemoveTargetCommand,
                                                  RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}"
                                IsEnabled="{Binding CanRemove}"/>
                            <!-- 시작 버튼 -->
                            <Button Content="시작"
                                    Style="{StaticResource DefaultButtonStyle}"
                                    Command="{Binding DataContext.StartTargetCommand,
                                                      RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding}"
                                    IsEnabled="{Binding CanStart}"
                                    Margin="8,0,0,0"/>

                            
                        </StackPanel>
                    </Grid>

                </Grid>

            </Border>

        </Grid>


    </Border>
</UserControl>
