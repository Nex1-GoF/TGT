<UserControl x:Class="TGT.Views.TargetCreationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TGT.ViewModels">

    <UserControl.DataContext>
        <vm:TargetCreationViewModel />
    </UserControl.DataContext>

    <Border Background="#111D2E" CornerRadius="8" Padding="10">
        <StackPanel>
            <TextBlock Text="표적 생성 툴" Background="#222"
Foreground="White"
FontSize="16"
FontWeight="Bold"
Margin="0,0,0,8"
Padding="10,4"
HorizontalAlignment="Center"
/>
            
            <!--Command="{Binding ToggleCreateModeCommand}"-->

            <Border Background="#222" CornerRadius="8" Padding="10" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- 왼쪽 입력 -->
                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="모델 구분" Foreground="White"/>
                        <ComboBox Width="60" SelectedValue="{Binding DetectedType}"
          SelectedValuePath="Content" >
                            <ComboBoxItem Content="A" />
                            <ComboBoxItem Content="B" />
                            <ComboBoxItem Content="C" />
                        </ComboBox>

                        <TextBlock Text="속도 (m/s)" Foreground="White"/>
                        <TextBox Width="80" Text="{Binding Speed}"/>

                        <TextBlock Text="고도 (m)" Foreground="White"/>
                        <TextBox Width="80" Text="{Binding Altitude}"/>
                    </StackPanel>

                    <!-- 오른쪽 입력 -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="시작 (Lat, Lon)" Foreground="White"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Width="70" Text="{Binding StartLat}" Margin="0,0,5,0"/>
                            <TextBox Width="70" Text="{Binding StartLon}"/>
                        </StackPanel>

                        <TextBlock Text="도착 (Lat, Lon)" Foreground="White"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Width="70" Text="{Binding EndLat}" Margin="0,0,5,0"/>
                            <TextBox Width="70" Text="{Binding EndLon}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                            <Button Content="등록" Command="{Binding AddTargetCommand}" Margin="0,0,5,0"/>
                            <!--Button Content="초기화" Command="{Binding ResetCommand}"/-->
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </Border>
</UserControl>