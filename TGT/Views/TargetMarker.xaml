<UserControl x:Class="TGT.Views.TargetMarker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TGT.Models"
             Width="40" Height="40">
    <Grid RenderTransformOrigin="0.5,0.5">
        <!-- 🔄 회전 (Yaw) -->
        <Grid.RenderTransform>
            <RotateTransform Angle="{Binding YawAngle}"/>
        </Grid.RenderTransform>

        <!-- 🔺 기본 삼각형 -->
        <Path Data="M 0,-15 L 10,15 L -10,15 Z"
              Stroke="Black"
              StrokeThickness="1"
              Fill="{Binding FillBrush}" />
    </Grid>
</UserControl>
